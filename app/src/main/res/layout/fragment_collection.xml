<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_kind_pet_collection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:hint="페트 검색"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_search_collection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_search_collection"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/edit_kind_pet_collection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_kind_pet_collection"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <TextView
        android:id="@+id/text_name_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="@+id/edit_kind_pet_collection"
        app:layout_constraintTop_toBottomOf="@+id/edit_kind_pet_collection"
        tools:text="페트 이름" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#f00"
        app:layout_constraintStart_toEndOf="@id/text_name_collection"
        app:layout_constraintTop_toTopOf="@id/text_name_collection" />

    <TextView
        android:id="@+id/text_lv_init_collection2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@+id/text_name_collection"
        app:layout_constraintTop_toBottomOf="@+id/text_name_collection"
        tools:text="레벨" />

    <TextView
        android:id="@+id/text_lv_init_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/text_lv_init_collection2"
        app:layout_constraintTop_toTopOf="@+id/text_lv_init_collection2"
        tools:text="1" />

    <TextView
        android:id="@+id/text_hp_init_collection2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/text_lv_init_collection2"
        app:layout_constraintTop_toBottomOf="@+id/text_lv_init_collection2"
        tools:text="피" />

    <TextView
        android:id="@+id/text_hp_init_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_lv_init_collection"
        app:layout_constraintTop_toTopOf="@+id/text_hp_init_collection2"
        tools:text="66" />


    <TextView
        android:id="@+id/text_atk_init_collection2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/text_lv_init_collection2"
        app:layout_constraintTop_toBottomOf="@+id/text_hp_init_collection2"
        tools:text="공" />

    <TextView
        android:id="@+id/text_atk_init_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_lv_init_collection"
        app:layout_constraintTop_toTopOf="@+id/text_atk_init_collection2"
        tools:text="15" />

    <TextView
        android:id="@+id/text_def_init_collection2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/text_lv_init_collection2"
        app:layout_constraintTop_toBottomOf="@+id/text_atk_init_collection2"
        tools:text="방" />

    <TextView
        android:id="@+id/text_def_init_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_lv_init_collection"
        app:layout_constraintTop_toTopOf="@+id/text_def_init_collection2"
        tools:text="9" />

    <TextView
        android:id="@+id/text_spd_init_collection2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/text_lv_init_collection2"
        app:layout_constraintTop_toBottomOf="@+id/text_def_init_collection2"
        tools:text="순" />

    <TextView
        android:id="@+id/text_spd_init_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_lv_init_collection"
        app:layout_constraintTop_toTopOf="@+id/text_spd_init_collection2"
        tools:text="7" />

    <TextView
        android:id="@+id/text_lv_max_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toEndOf="@+id/text_lv_init_collection"
        app:layout_constraintTop_toTopOf="@+id/text_lv_init_collection"
        tools:text="140" />

    <TextView
        android:id="@+id/text_hp_max_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_lv_max_collection"
        app:layout_constraintTop_toTopOf="@+id/text_hp_init_collection2"
        tools:text="1324" />

    <TextView
        android:id="@+id/text_atk_max_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_lv_max_collection"
        app:layout_constraintTop_toTopOf="@+id/text_atk_init_collection2"
        tools:text="256" />

    <TextView
        android:id="@+id/text_def_max_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_lv_max_collection"
        app:layout_constraintTop_toTopOf="@+id/text_def_init_collection2"
        tools:text="185" />

    <TextView
        android:id="@+id/text_spd_max_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_lv_max_collection"
        app:layout_constraintTop_toTopOf="@+id/text_spd_init_collection2"
        tools:text="195" />

    <TextView
        android:id="@+id/text_growth_min_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toEndOf="@+id/text_lv_max_collection"
        app:layout_constraintTop_toTopOf="@+id/text_lv_max_collection"
        tools:text="최소" />

    <TextView
        android:id="@+id/text_growth_min_hp_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_growth_min_collection"
        app:layout_constraintTop_toTopOf="@+id/text_hp_init_collection2"
        tools:text="피+1" />

    <TextView
        android:id="@+id/text_growth_min_atk_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_growth_min_collection"
        app:layout_constraintTop_toTopOf="@+id/text_atk_init_collection2"
        tools:text="공+1" />

    <TextView
        android:id="@+id/text_growth_min_def_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_growth_min_collection"
        app:layout_constraintTop_toTopOf="@+id/text_def_init_collection2"
        tools:text="방+1" />

    <TextView
        android:id="@+id/text_growth_min_spd_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_growth_min_collection"
        app:layout_constraintTop_toTopOf="@+id/text_spd_init_collection2"
        tools:text="순+1" />

    <TextView
        android:id="@+id/text_growth_max_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toEndOf="@+id/text_growth_min_collection"
        app:layout_constraintTop_toTopOf="@+id/text_growth_min_collection"
        tools:text="최대" />

    <TextView
        android:id="@+id/text_growth_max_hp_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_growth_max_collection"
        app:layout_constraintTop_toTopOf="@+id/text_hp_init_collection2"
        tools:text="피+10" />

    <TextView
        android:id="@+id/text_growth_max_atk_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_growth_max_collection"
        app:layout_constraintTop_toTopOf="@+id/text_atk_max_collection"
        tools:text="공+10" />

    <TextView
        android:id="@+id/text_growth_max_def_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_growth_max_collection"
        app:layout_constraintTop_toTopOf="@+id/text_def_max_collection"
        tools:text="방+10" />

    <TextView
        android:id="@+id/text_growth_max_spd_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text_growth_max_collection"
        app:layout_constraintTop_toTopOf="@+id/text_spd_max_collection"
        tools:text="순+10" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_collection"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_spd_init_collection2" />

</androidx.constraintlayout.widget.ConstraintLayout>